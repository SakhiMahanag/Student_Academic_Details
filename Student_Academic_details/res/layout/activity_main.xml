<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.student_academic_details.MainActivity">
    <ImageView
        android:id="@+id/ss"
        android:layout_height="200dp"
        android:layout_width="300dp"
        android:src="@drawable/unnamed"/>" 
    <Button
        android:id="@+id/btnst"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/exit"
        android:layout_below="@+id/ss"
        android:layout_marginTop="20dp"
        android:background="@color/blue_700"
        android:text="Student Details"
        android:textColor="@color/white"
        android:textSize="20sp" />
  <Button
        android:id="@+id/acad"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnst"
        android:background="@color/blue_700"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:text="Academic Details"/>
   <Button
        android:id="@+id/send_sms"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acad"
        android:background="@color/blue_700"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:text="Send SMS"/>
    <Button
        android:id="@+id/exit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_sms"
        android:background="@color/blue_700"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:text="Exit"/>
        </RelativeLayout>
        
        
